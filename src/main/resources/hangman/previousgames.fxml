<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.cell.PropertyValueFactory?>


<?import javafx.scene.control.Label?>
<VBox alignment="CENTER" prefHeight="635.0" prefWidth="544.0" spacing="10" style="-fx-background-color: #001f3f; -fx-padding: 20;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hangman.PreviousGamesController">

    <!-- Title -->
    <Label style="-fx-font-size: 24px; -fx-text-fill: white;" text="Previous Games" />

    <!-- Table for Previous Games -->
    <TableView fx:id="table">
        <columns>
            <TableColumn fx:id="gameIdColumn" text="Game ID" >
                <cellValueFactory>
                    <PropertyValueFactory property="gameID" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="usernameColumn" text="Username" >
                <cellValueFactory>
                    <PropertyValueFactory property="username" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="wordColumn" text="Word" >
                <cellValueFactory>
                    <PropertyValueFactory property="word" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="wrongGuessesColumn" text="Wrong Guesses" >
                <cellValueFactory>
                    <PropertyValueFactory property="wrongGuesses" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="timeColumn" text="Time" >
                <cellValueFactory>
                    <PropertyValueFactory property="time" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="winColumn" text="Win" >
                <cellValueFactory>
                    <PropertyValueFactory property="win" />
                </cellValueFactory>
            </TableColumn>
        </columns>
    </TableView>

    <!-- Back to Menu Button -->
    <Button onAction="#handleBackToMenu" style="-fx-background-color: #0059b3; -fx-text-fill: white; -fx-font-size: 14px;" text="Back to Menu" />
</VBox>
