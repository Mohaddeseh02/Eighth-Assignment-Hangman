<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" prefHeight="635.0" prefWidth="544.0" spacing="10" style="-fx-background-color: #001f3f; -fx-padding: 20;" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/21" fx:controller="hangman.LoginPageController">

    <!-- Title -->
    <Label style="-fx-font-size: 24px; -fx-text-fill: white;" text="Login" />

    <!-- Username Field -->
    <Label style="-fx-text-fill: white;" text="Username:" />
    <TextField fx:id="usernameField" promptText="Enter username" style="-fx-background-color: #004080; -fx-text-fill: white; -fx-prompt-text-fill: #aaaaaa;" />

    <!-- Password Field -->
    <Label style="-fx-text-fill: white;" text="Password:" />
    <PasswordField fx:id="passwordField" promptText="Enter password" style="-fx-background-color: #004080; -fx-text-fill: white; -fx-prompt-text-fill: #aaaaaa;" />

    <!-- Login Button -->
    <Button onAction="#handleLogin" style="-fx-background-color: #0059b3; -fx-text-fill: white; -fx-font-size: 14px;" text="Login" />

    <!-- Message Text -->
    <Text fx:id="messageText" style="-fx-text-fill: white;" />

    <!-- Signup Link -->
    <Text onMouseClicked="#handleSignup" style="-fx-fill: #00aaff; -fx-underline: true; -fx-cursor: hand;" text="Don't have an account? Signup here." />
</VBox>
