<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="700.0" prefWidth="600.0" spacing="10" style="-fx-background-color: #001f3f; -fx-padding: 20;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hangman.LeaderboardController">

    <!-- Title -->
    <Label style="-fx-font-size: 24px; -fx-text-fill: white;" text="Leaderboard" />

    <!-- TableView -->
    <TableView fx:id="table" prefHeight="600.0" prefWidth="600.0" style="-fx-background-color: #181818;">
        <columns>
            <TableColumn fx:id="usernameColumn" editable="false" prefWidth="300.0" resizable="false" style="-fx-background-color: #a2d7eb; -fx-alignment: CENTER; -fx-font-size: 15px;" text="Username">
                <cellValueFactory>
                    <PropertyValueFactory property="username" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="totalWinsColumn" editable="false" prefWidth="300.0" resizable="false" style="-fx-background-color: #a2d7eb; -fx-alignment: CENTER; -fx-font-size: 15px;" text="Total Wins">
                <cellValueFactory>
                    <PropertyValueFactory property="totalWins" />
                </cellValueFactory>
            </TableColumn>
        </columns>
    </TableView>

    <!-- Back Button -->
    <Button onAction="#moveMenuPage" style="-fx-background-color: #181818; -fx-border-color: #a2d7eb; -fx-border-width: 2; -fx-text-fill: #a2d7eb;" text="Back">
        <font>
            <Font name="System Bold" size="25.0" />
        </font>
    </Button>

</VBox>
